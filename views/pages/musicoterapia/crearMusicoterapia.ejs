<h6 class="titulo-pagina-menu">Musicoterapia</h6>

<div class="content">
  <div class="container">
    <div class="formulario">
      <nav class="mt-4" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/generos-musicales">Musicoterapia</a></li>
          <li class="breadcrumb-item active" aria-current="page">Crear</li>
        </ol>
      </nav>

      <div class="card mt-5">
        <div class="mb-4">
          <h6>Crear Género Musical</h6>
        </div>
        <% flash.get('mensaje').forEach(function (msg) { %>
          <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <p>
              <i><span class="fa fa-circle-xmark"></span></i>
              <%=msg%>
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% }) %>
            <div class="card-body">
              <form class="row g-4" id="formulario-musicoterapia" method="post" action="/procesar-crear-genero-musical">
                <div class="col-md-6 mb-3">
                  <label for="nombreGenero" class="form-label">Nombre</label>
                  <input type="text" class="form-control" id="nombreGenero" name="nombreGenero"
                    placeholder="nombre color" autocomplete="off">
                </div>
                <div class="col-md-6 mb-3">
                  <label for="descripcionGenero" class="form-label">Descripción Género Musical</label>
                  <textarea class="form-control" id="descripcionGenero" name="descripcionGenero"
                    placeholder="Esciba aquí..."></textarea>
                </div>
            </div>
            <div class="d-grid gap-2 mt-4">
              <button class="btn btn-outline-primary" type="submit">Crear Genero Musical</button>
            </div>
            </form>
      </div>
    </div>
  </div>
</div>