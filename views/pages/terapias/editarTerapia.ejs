<h6 class="titulo-pagina-menu">Terapias</h6>

<div class="content">
  <div class="container">
    <div class="formulario">
      <nav class="mt-4" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/terapias">Terapias</a></li>
          <li class="breadcrumb-item active" aria-current="page">Editar</li>
        </ol>
      </nav>

      <div class="card mt-5">
        <div class="mb-4">
          <h6>Editar Terapia</h6>
        </div>
        <% flash.get('mensaje').forEach(function (msg) { %>
          <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <p>
              <i><span class="fa fa-circle-xmark"></span></i>
              <%=msg%>
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% }) %>
            <div class="card-body">
              <form class="row g-4" id="formulario-terapia" method="post" action="/procesar-editar-terapia">
                <div class="col-md-6 mb-3">
                  <label for="idTerapia" class="form-label">Id</label>
                  <input type="text" class="form-control" id="idTerapia" name="idTerapia" value="<%=terapia[0].id%>"
                    autocomplete="off" readonly>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="descripcionTerapia" class="form-label">Descripcion</label>
                  <input type="text" class="form-control" id="descripcionTerapia" name="descripcionTerapia"
                    value="<%=terapia[0].descripcion_terapia%>" placeholder="descripción terapia" autocomplete="off"
                    disabled>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="idColor" class="form-label">Color</label>
                  <select class="form-select" id="idColor" name="idColor" autocomplete="off">
                    <option selected disabled value="0">seleccione un color</option>
                    <% colores.forEach( color=> { %>
                      <option value="<%=color.id%>">
                        <%=color.nombre_color%>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="idAroma" class="form-label">Aroma</label>
                  <select class="form-select" id="idAroma" name="idAroma" autocomplete="off">
                    <option selected disabled value="0">seleccione un aroma</option>
                    <% aromas.forEach( aroma=> { %>
                      <option value="<%=aroma.id%>">
                        <%=aroma.nombre_aroma%>
                      </option>
                      <% }) %>
                  </select>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="idGenero" class="form-label">Género Musical</label>
                  <select class="form-select" id="idGenero" name="idGenero" autocomplete="off">
                    <option selected disabled value="0">seleccione un género musical</option>
                    <% generos.forEach( genero=> { %>
                      <option value="<%=genero.id%>">
                        <%=genero.nombre_genero_musical%>
                      </option>
                      <% }) %>
                  </select>
                </div>
            </div>
            <div class="d-grid gap-2 mt-4">
              <button class="btn btn-outline-primary" type="submit">Editar Terapia</button>
            </div>
            </form>
      </div>
    </div>
  </div>
</div>