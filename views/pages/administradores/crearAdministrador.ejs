<h6 class="titulo-pagina-menu">Administradores</h6>

<div class="content">
  <div class="container">
    <div class="formulario">
      <nav class="mt-4" style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/administradores">Administradores</a></li>
          <li class="breadcrumb-item active" aria-current="page">Crear</li>
        </ol>
      </nav>

      <div class="card mt-5">
        <div class="mb-4">
          <h6>Crear Administrador</h6>
        </div>
        <% flash.get('mensaje').forEach(function (msg) { %>
          <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <p>
              <i><span class="fa fa-circle-xmark"></span></i>
              <%=msg%>
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% }) %>
            <div class="card-body">
              <form class="row g-4" id="formulario-admin" method="post" action="/procesar-crear-administrador">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="nombreAdministrador" class="form-label">Nombres</label>
                    <input type="text" class="form-control" id="nombreAdministrador" name="nombreAdministrador"
                      placeholder="nombres completos" autocomplete="off">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="apellido1Administrador" class="form-label">Primer Apellido</label>
                    <input type="text" class="form-control" id="apellido1Administrador" name="apellido1Administrador"
                      placeholder="primer apellido" autocomplete="off">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="apellido2Administrador" class="form-label">Segundo Apellidos</label>
                    <input type="text" class="form-control" id="apellido2Administrador" name="apellido2Administrador"
                      placeholder="segundo apellido" autocomplete="off">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="correoAdministrador" class="form-label">Correo</label>
                    <input type="email" class="form-control" id="correoAdministrador" name="correoAdministrador"
                      aria-describedby="correoAdministrador" autocomplete="off" placeholder="correo@dominio.com">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="contrasenaAdministrador" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="contrasenaAdministrador"
                      name="contrasenaAdministrador" autocomplete="off" placeholder="contraseña">
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="estadoAdministrador" class="form-label">Estado Administrador</label>
                    <select class="form-select" id="estadoAdministrador" name="estadoAdministrador" autocomplete="off">
                      <option selected disabled value="">seleccione un estado</option>
                      <option>Activo</option>
                      <option>Inactivo</option>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="d-grid gap-2 mt-4">
                    <button class="btn btn-outline-primary" type="submit">Crear Administrador</button>
                  </div>
                </div>
              </form>
            </div>
      </div>
    </div>
  </div>
</div>